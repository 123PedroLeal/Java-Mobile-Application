<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green_secondary"
    tools:context=".Vistas.Principal.Opciones"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/TituloOpciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmserifdisplay_regular"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"

            android:gravity="center"
            android:text="¿Qué deseas Usar?"
            android:textColor="#344C11"
            android:textSize="45dp"/>

        <LinearLayout
            android:id="@+id/OpcionProducto"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/des_tarjetas"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/TextoProductos"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmserifdisplay_regular"
                android:gravity="center"

                android:text="Productos"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="40dp"/>

            <ImageView
                android:id="@+id/ImagenProductos"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/ic_fruits" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/OpcionSucursal"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/des_tarjetas"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/TextoSucursal"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmserifdisplay_regular"
                android:gravity="center"

                android:text="Sucursales"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="40dp"/>

            <ImageView
                android:id="@+id/ImagenSucursal"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/ic_tienda2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/OpcionServicio"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/des_tarjetas"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmserifdisplay_regular"
                android:gravity="center"

                android:text="Asesoría"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="40dp"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/ic_info"/>

        </LinearLayout>

        <Button
            android:id="@+id/BotonVolverLogin"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/des_botonesnew"
            android:layout_marginTop="20dp"

            android:text="Volver"
            android:textSize="20dp"
            android:fontFamily="@font/dmsans_bold"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>