<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="#AEC670">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/des_tarjetas"
        android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/TarjetaProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/NombreProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"

                android:text="Nombre"
                android:textSize="26dp"
                android:fontFamily="@font/dmsans_regular"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/DescripcionProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="Descripcion"
                android:textSize="15dp"
                android:fontFamily="@font/dmsans_regular"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/PrecioProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"

                android:text="Precio"
                android:textSize="22dp"
                android:fontFamily="@font/dmsans_bold"
                android:textColor="@color/white" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ImagenProducto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            tools:srcCompat="@tools:sample/avatars" />


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
            android:id="@+id/BotonBorrarProductoFB"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:backgroundTint="@color/green_secondary"

            android:fontFamily="@font/dmsans_bold"
            android:text="Borrar"
            android:textColor="@color/white"
            android:textSize="15dp"/>


            <Button
            android:id="@+id/BotonActualizarProductoFB"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green_secondary"

            android:fontFamily="@font/dmsans_bold"
            android:text="Editar"
            android:textColor="@color/white"
            android:textSize="15dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>