<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AEC670"
    android:orientation="vertical">

  <TextView
      android:id="@+id/TituloSucursal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="@font/dmserifdisplay_regular"
      android:layout_marginTop="10dp"

      android:gravity="center"
      android:text="Sucursales"
      android:textColor="#344C11"
      android:textSize="65dp" />

  <LinearLayout
      android:id="@+id/ContenedorListaSucursales"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <ListView
        android:id="@+id/ListaSucursales"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

  </LinearLayout>

  </LinearLayout>