<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AEC670"
    tools:context=".Vistas.Productos.Catalogo_Productos"
    android:orientation="vertical">

    <TextView
        android:id="@+id/TituloProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dmserifdisplay_regular"
        android:layout_marginTop="10dp"

        android:gravity="center"
        android:text="Productos"
        android:textColor="#344C11"
        android:textSize="65dp" />

    <LinearLayout
        android:id="@+id/ContenedorListaProductos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/ListaProductos"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>